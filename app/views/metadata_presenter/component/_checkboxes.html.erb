%
departments = [
  OpenStruct.new(id: 1, name: 'Sales'),
  OpenStruct.new(id: 2, name: 'Marketing'),
  OpenStruct.new(id: 3, name: 'Finance')
]
heading = 'MyList'
%>


<%= f.govuk_collection_select heading,
component.items, 
  :id, 
  :name,
include_hidden: false
%>

<%=
  f.govuk_collection_check_boxes component.id.to_sym,
  component.items,
    :id,
    :name,
    :description,
    legend: { text: input_title },
    hint: {
      data: { "fb-default-text" => default_text('hint') },
      text: component.hint
    },
    include_hidden: false
%>