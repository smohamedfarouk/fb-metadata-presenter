<% options = options_from_collection_for_select(
      component.options, :id, :name, selected_option || component.default
    ) %>
<%# Render the dropdown element using the Rails form builder %>
<%= form.govuk_collection_select(
    component.id.to_sym,
    options,
    label: { text: component.label || 'Select Option' },
    hint: {
      data: { "fb-default-text" => default_text('hint'), "fb-node" => "hint" },
      text: component.hint || 'Please select one of the options.'
    },
    name: "answers[#{component.name}]",
    include_blank: component.include_blank?,
    aria: { describedby: "#{component.name}_hint" }
) %>